<div class="row justify-content-md-center">
    <!-- Login Form -->
    <div class="container col-md-5">
        <h2>Login:</h2>
        <form class="form-horizontal loginForm">
            <!-- Email Input -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="email-login">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email-login" placeholder="Enter email">
                </div>
            </div>
            <!-- Password Input -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="password-login">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password-login" placeholder="Enter password">
                </div>
            </div>
            <!-- Login Button -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Login</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Sign Up Form -->
    <div class="container col-md-5">
        <h2>Sign Up:</h2>
        <form class="form-horizontal signupForm">
            <!-- Name Input -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="name-signup">Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name-signup" placeholder="Enter your name">
                </div>
            </div>
            <!-- Email Input -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="email-signup">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email-signup" placeholder="Enter email">
                </div>
            </div>
            <!-- Password Input -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="password-signup">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password-signup" placeholder="Enter password">
                </div>
            </div>
            <!-- Sign Up Button -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Include JavaScript file for handling login functionality -->
<script src="./js/login.js"></script>
